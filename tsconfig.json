{
  "compilerOptions": {
    "declaration": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "module": "commonjs",
    "noImplicitAny": false,
    "outDir": "./lib/",
    "skipLibCheck": true,
    "sourceMap": true,
    "target": "es5",
    "typeRoots": ["@types", "node_modules/@types"]
  },
  "exclude": ["lib", "node_modules/**"],
  "include": ["src/**/*"]
}
